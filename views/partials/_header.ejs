<header>
	<nav class="navbar navbar-expand-md navbar-dark bg-success">
		<a class="navbar-brand" href="/urls">TinyApp</a>
		<button class="navbar-toggler" type="button" data-toggle="collapse" data-target="#navbarNavAltMarkup" aria-controls="navbarNavAltMarkup" aria-expanded="false" aria-label="Toggle navigation">
			<span class="navbar-toggler-icon"></span>
		</button>
		<div class="collapse navbar-collapse" id="navbarNavAltMarkup">
			<div class="navbar-nav">
				<a class="nav-item nav-link" href="/urls">My URLs</a>
				<a class="nav-item nav-link" href="/urls/new">Create New URL</a>
			</div>
		</div>
		<% if(username) {%>
			<div class="mr-3">Logged In As TinyApp User: <%= username %></div>
			<form class="form-inline align-content-center" action="/logout" method="POST" style="height: 3rem;" >
				<button type="submit" class="btn btn-outline-dark">Logout</button>
			</form>
			<% } else {%>
				<form class="form-inline justify-content-end align-content-center" style="height: 3rem;" action="/login" method="POST">
					<div class="form-group">
						<label for="username" style="color: #fff;">User Name:</label>
						<input class="form-control" type="text" name="username" placeholder="Please enter username" style="width: 300px; margin: 1em">
						<button type="submit" class="btn btn-outline-dark">Login</button>
					</div>
				</form>
				<% } %>
	</nav>
</header>